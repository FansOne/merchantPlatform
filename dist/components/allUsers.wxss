.ensure_box {
  box-sizing: border-box;
  padding-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.ensure_box .ensure {
  display: flex;
  flex: 1;
  justify-content: space-between;
  align-items: center;
}
.ensure_box .ensure .ensure_item {
  display: flex;
  align-items: center;
}
.ensure_box .ensure .ensure_item image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 7rpx;
}
.ensure_box .ensure .ensure_item view {
  color: #805915;
  font-size: 26rpx;
}
.userMessItem_boxs {
  padding-bottom: 35rpx;
}
.userMessItem {
  background-color: #f3f3f3;
  border-radius: 70rpx;
  display: flex;
  align-items: center;
  margin-top: 25rpx;
  padding: 10rpx 25rpx;
}
.userMessItem .userMessItem_left {
  position: relative;
}
.userMessItem .userMessItem_left image {
  border: 1rpx solid sandybrown;
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
}
.userMessItem .userMessItem_left .grouper {
  position: absolute;
  left: 8rpx;
  bottom: -8rpx;
  width: 80rpx;
  background-color: #000;
  border: 1rpx solid #fff;
  color: #ffd270;
  border-radius: 50rpx;
  font-size: 25rpx;
  padding: 3rpx 0;
  text-align: center;
}
.userMessItem .userMessItem_right {
  padding-left: 20rpx;
}
.userMessItem .userMessItem_right view:nth-child(1) {
  font-size: 33rpx;
  color: #000;
}
.userMessItem .userMessItem_right view:nth-child(2) {
  font-size: 27rpx;
  padding-top: 10rpx;
}
