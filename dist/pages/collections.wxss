page {
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.collection-wrap {
  width: 100%;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.shop-list-wrap {
  width: 100%;
  height: 196rpx;
  margin-top: 20rpx;
  border-top: 2rpx solid #f3f3f3;
  display: flex;
}
.shop-list-wrap .shop-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 6rpx;
  margin-top: 8rpx;
}
.shop-list-wrap .shop-info-wrap {
  flex: 1;
  height: 100%;
  padding-left: 16rpx;
  box-sizing: border-box;
}
.shop-list-wrap .shop-info-wrap .title-wrap {
  width: 100%;
  height: 72rpx;
  padding-top: 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333333;
  display: flex;
  justify-content: space-between;
}
.shop-list-wrap .shop-info-wrap .title-wrap .title {
  width: auto;
}
.shop-list-wrap .shop-info-wrap .title-wrap .position {
  height: 100%;
  flex: 1;
  text-align: right;
}
.shop-list-wrap .shop-info-wrap .title-wrap .position image {
  display: inline-block;
  width: 30rpx;
  height: 26rpx;
  margin-top: 10rpx;
}
.shop-list-wrap .shop-info-wrap .star-wrap {
  width: 100%;
  height: 26rpx;
}
.shop-list-wrap .shop-info-wrap .star-wrap .star {
  float: left;
  width: 165rpx;
  height: 24rpx;
  position: relative;
}
.shop-list-wrap .shop-info-wrap .star-wrap .average {
  float: left;
  font-size: 24rpx;
  color: #c55159;
  margin-left: 16rpx;
}
.shop-list-wrap .shop-info-wrap .price {
  font-size: 28rpx;
  color: #fd2323;
  margin-top: 30rpx;
  text-align: left;
}
.star-image {
  position: absolute;
  top: 0rpx;
  width: 28rpx;
  height: 28rpx;
  src: "../images/star.png";
}
.item1 {
  position: absolute;
  top: 0rpx;
  width: 28rpx;
  height: 28rpx;
}
.shop {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #999;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  height: 40rpx;
}
