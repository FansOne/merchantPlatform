view {
  box-sizing: border-box;
}
.moneyBox {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 54rpx;
}
.moneyBox .inputMoney {
  display: flex;
}
.moneyBox .inputMoney .symbol {
  padding-top: 40rpx;
  font-size: 48rpx;
  line-height: 106rpx;
}
.moneyBox .inputMoney .money {
  font-size: 106rpx;
}
.moneyBox .prompt {
  padding-left: 15rpx;
  font-size: 28rpx;
  color: #999;
}
.preferentialRules {
  width: 100%;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
}
.preferentialRules .preferentialRulesTop {
  display: flex;
  justify-content: space-between;
}
.preferentialRules .preferentialRulesTop .preferentialRulesItem {
  position: relative;
  width: 195rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  border: 1rpx solid #ffd05c;
  border-radius: 8rpx;
  background-color: #fafafa;
}
.preferentialRules .preferentialRulesTop .preferentialRulesItem .topPrompt {
  width: 130rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  position: absolute;
  top: -33rpx;
  left: -7rpx;
  font-size: 28rpx;
  color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx #bdb9b9;
}
.preferentialRules .preferentialRulesTop .preferentialRulesItem .recharge {
  padding-top: 25rpx;
}
.preferentialRules .preferentialRulesTop .preferentialRulesItem .recharge {
  font-size: 24rpx;
}
.preferentialRules .preferentialRulesTop .preferentialRulesItem .preferential {
  padding: 10rpx 0;
  font-size: 34rpx;
}
.preferentialRules .preferentialRulesBottom {
  width: 100%;
  text-align: center;
  color: #666;
  padding-top: 35rpx;
  font-size: 28rpx;
}
.preferentialRules .preferentialRulesBottom text {
  color: #ffd05c;
}
.payBtnBox_ {
  width: 100%;
  padding: 10rpx 40rpx;
}
.payBtnBox_ button {
  font-size: 32rpx;
}
.payBtnBox_ .discountBtn {
  background-color: #fedb3a;
}
.payBtnBox_ .originalPriceBtn {
  margin-top: 25rpx;
  background-color: #4ecd9f;
}
.activeRulesItem .preferentialRulesItem {
  background-color: #fffdea !important;
}
.activeRulesItem .preferentialRulesItem .preferential {
  color: #ffd05c;
}
.currentBalance {
  width: 100%;
  text-align: center;
  margin-top: 13rpx;
  font-size: 27rpx;
  color: #666;
}
.currentBalance text {
  color: #000;
}
.bottomPrompt {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  position: fixed;
  bottom: 20rpx;
  color: #747373;
}
