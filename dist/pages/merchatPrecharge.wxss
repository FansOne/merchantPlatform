view {
  color: #000;
  box-sizing: border-box;
}
.userBalanceBox {
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  box-shadow: 0 10rpx 10rpx #e7e7e7;
}
.userBalanceBox .priceBox {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.userBalanceBox .priceBox .priceItem {
  display: flex;
  align-items: flex-end;
}
.userBalanceBox .priceBox .priceItem view:first-of-type {
  font-size: 32rpx;
  height: 66rpx;
}
.userBalanceBox .priceBox .priceItem view:last-of-type {
  font-size: 90rpx;
}
.userBalanceBox image {
  width: 77rpx;
  height: 88rpx;
}
.choosePrechagrgeBox {
  width: 100%;
  padding: 30rpx 30rpx 0 30rpx;
}
.choosePrechagrgeBox .prechagrgeTitle {
  font-size: 26rpx;
}
.choosePrechagrgeBox .prechagrgeItemBox {
  width: 100%;
  padding-top: 22rpx;
  display: flex;
  justify-content: space-between;
  flex-flow: wrap;
}
.choosePrechagrgeBox .prechagrgeItemBox .prechagrgeItem {
  font-size: 34rpx;
  width: 30%;
  background-color: #f7f7f7;
  height: 95rpx;
  line-height: 95rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
.choosePrechagrgeBox .prechagrgeItemBox .selectPrice {
  background-color: #ffd15f;
}
.choosePrechagrgeBox .inputPrice {
  display: flex;
  align-items: center;
}
.choosePrechagrgeBox .inputPrice view:first-of-type {
  font-size: 26rpx;
  margin-right: 10rpx;
}
.choosePrechagrgeBox .inputPrice view:last-of-type {
  flex: 1;
  background-color: #f7f7f7;
  height: 95rpx;
  line-height: 95rpx;
  padding: 0 15rpx;
}
.choosePrechagrgeBox .inputPrice view:last-of-type input {
  height: 95rpx;
  line-height: 95rpx;
  width: 100%;
}
.choosePrechagrgeBox .prechagrgePrompt {
  font-size: 26rpx;
  color: #888;
  padding: 25rpx 0 40rpx 0;
}
.choosePrechagrgeBox .prechagrgeBtn {
  padding-bottom: 45rpx;
  border-bottom: 1rpx solid #e6e6e6;
}
.choosePrechagrgeBox .prechagrgeBtn button {
  background-color: #ffd15f;
  font-size: 33rpx;
  letter-spacing: 4rpx;
  color: #000;
}
.detailedBox {
  width: 100%;
  padding: 30rpx;
}
.detailedBox .detailedTitle {
  font-size: 26rpx;
  padding-bottom: 35rpx;
}
.detailedBox .detailedItemBox {
  width: 100%;
}
.detailedBox .detailedItemBox .detailedItemTitle {
  width: 100%;
  height: 66rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #f7f7f7;
}
.detailedBox .detailedItemBox .detailedItemTitle view {
  font-size: 26rpx;
}
.detailedBox .detailedItemBox .detailedItem {
  width: 100%;
  height: 77rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e6e6e6;
}
.detailedBox .detailedItemBox .detailedItem view {
  flex: .2;
  text-align: center;
  font-size: 26rpx;
}
