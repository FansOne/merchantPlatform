view {
  box-sizing: border-box;
}
.explainTitle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx;
}
.explainTitle .explainTitleItem {
  color: #000;
  font-weight: bold;
}
.explainTitle .explainTitleItem2 {
  background-color: #ec4451;
  color: #fff;
  border-radius: 50rpx;
  padding: 4rpx 35rpx;
}
.explainInputBox {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 0 30rpx;
}
.explainInputBox .leftIcon {
  width: 50rpx;
  height: 50rpx;
}
.explainInputBox .leftText {
  font-weight: bold;
  font-size: 33rpx;
  color: #000;
}
.explainInputBox .rightIcon {
  flex: 1;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 20rpx 0;
  justify-content: space-between;
  margin-left: 25rpx;
}
.explainInputBox .rightIcon view:first-of-type {
  font-size: 30rpx;
}
.explainInputBox .rightIcon view:first-of-type text {
  font-size: 22rpx;
}
.explainInputBox .rightIcon .integralBox {
  display: flex;
  align-items: center;
}
.explainInputBox .rightIcon .integralBox image {
  width: 25rpx;
  height: 30rpx;
}
.explainInputBox .rightIcon .integralBox view {
  font-size: 22rpx;
}
.grayLine {
  width: 100%;
  height: 30rpx;
  background-color: #eee;
}
.wxCode {
  z-index: 99;
  width: 500rpx;
  height: 500rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}
