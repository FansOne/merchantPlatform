.topIconPriceBox {
  height: 444rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #f1f1f1;
  margin-bottom: 45rpx;
}
.topIconPriceBox image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.topIconPriceBox view:first-of-type {
  color: #000;
  padding: 35rpx 0 20rpx 0;
}
.topIconPriceBox view:last-of-type {
  font-size: 60rpx;
  color: #000;
  transform: translateX(-8rpx);
}
.paymentExplain {
  display: flex;
  width: 100%;
  padding: 0 40rpx;
  margin-bottom: 35rpx;
}
.paymentExplain view {
  font-size: 28rpx;
  color: #000;
}
.paymentExplain view:first-of-type {
  flex: .2;
  color: #999;
}
.paymentExplain view:last-of-type {
  flex: 1;
  padding-left: 20rpx;
}
