page {
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.btn-things-wrap {
  width: 710rpx;
  height: 280rpx;
  margin: 0 auto 0rpx;
}
.btn-things-wrap .item {
  width: 130rpx;
  height: 130rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: center;
  display: inline-block;
  margin-right: 14rpx;
  margin-top: 10rpx;
}
.btn-things-wrap .item .image-btn {
  display: block;
  margin: 0 auto;
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
}
.btn-things-wrap .item .btn-desc {
  font-size: 24rpx;
  color: #666666;
}
.btn-things-wrap .item:nth-child(5n) {
  margin-right: 0;
}
.cover-mask {
  width: 100%;
  height: 100%;
  background-color: #fff;
  position: absolute;
  top: 0;
  bottom: 0;
}
