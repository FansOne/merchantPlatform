@import "./../../../../components/commentStar.wxss";
page {
  width: 100%;
  height: 100%;
  background-color: #f3f3f3;
}
.comments-wrap {
  width: 710rpx;
  height: 334rpx;
  background-color: #fff;
  margin: 20rpx auto;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}
.comments-wrap .comments-head-wrap {
  width: 100%;
  height: 120rpx;
}
.comments-wrap .comments-head-wrap .logo {
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
}
.comments-wrap .comments-head-wrap .name {
  display: inline-block;
  vertical-align: top;
  width: auto;
  height: 100%;
  font-size: 34rpx;
  color: #333;
  line-height: 120rpx;
  margin-left: 30rpx;
}
.comments-wrap .star-wrap {
  width: 405rpx;
  height: 43rpx;
  margin: 70rpx auto 0;
  position: relative;
}
.comments-content-wrap {
  width: 710rpx;
  height: 574rpx;
  background-color: #fff;
  margin: 0 auto;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
}
.comments {
  width: 670rpx;
  height: 490rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f3f3f3;
  font-size: 30rpx;
  color: #969696;
}
.save-btn {
  width: 710rpx;
  height: 98rpx;
  background-color: #ffd265;
  margin: 40rpx auto 0;
  font-size: 36rpx;
  color: #333;
  border-radius: 49rpx;
  text-align: center;
  line-height: 98rpx;
}
