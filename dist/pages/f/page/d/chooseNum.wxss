page {
  height: 100%;
  background-color: #f3f3f3;
}
/*头部*/
.deliver-wrap {
  width: 100%;
  height: 200rpx;
  background-color: #ffd265;
  border: 1rpx solid #ffd265;
  box-sizing: border-box;
}
.deliver-wrap .deliver-head-wrap {
  width: 710rpx;
  height: 250rpx;
  padding-bottom: 15rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 6rpx;
  position: relative;
  margin: 80rpx auto 0;
}
.deliver-wrap .deliver-head-wrap .deliver-head {
  width: 650rpx;
  height: 120rpx;
  margin: auto;
  position: relative;
}
.deliver-wrap .deliver-head-wrap .deliver-head image {
  display: inline-block;
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  top: -60rpx;
  left: 0;
  right: 0;
  margin: auto;
}
.deliver-wrap .deliver-head-wrap .name {
  width: 100%;
  color: #333;
  font-size: 34rpx;
  text-align: center;
  margin-top: 45rpx;
}
/*选择就餐人数样式*/
.chooseNum-wrap {
  width: 710rpx;
  height: 675rpx;
  background-color: #fff;
  margin: 20rpx auto 0;
  padding: 25rpx 20rpx 20rpx 20rpx;
  box-sizing: border-box;
  /*选择具体人数*/
}
.chooseNum-wrap .sold-list-head {
  width: 100%;
  height: 80rpx;
  margin: 0 auto;
}
.chooseNum-wrap .sold-list-head image {
  display: inline-block;
  width: 6rpx;
  height: 40rpx;
  background-color: #ffd265;
  margin-top: 20rpx;
  margin-right: 20rpx;
}
.chooseNum-wrap .sold-list-head view {
  display: inline-block;
  height: 100%;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  vertical-align: top;
}
.chooseNum-wrap .num-people {
  width: 100%;
  height: auto;
  background-color: #fff;
  margin-top: 15rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.chooseNum-wrap .num-people .num {
  width: 152rpx;
  height: 70rpx;
  background-color: #f3f3f3;
  line-height: 70rpx;
  text-align: center;
  color: #333;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.chooseNum-wrap .num-people .num-active {
  background-color: #ffd265;
}
.chooseNum-wrap textarea {
  display: block;
  width: 100%;
  height: 150rpx;
  background-color: #f3f3f3;
  font-size: 28rpx;
  color: #333;
  padding: 15rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.chooseBtn {
  width: 710rpx;
  height: 98rpx;
  margin: 36rpx auto 0;
  background-color: #ffd265;
  box-shadow: 0px 3px 9px 0px rgba(0, 0, 0, 0.08);
  border-radius: 49px;
  font-size: 36rpx;
  text-align: center;
  line-height: 98rpx;
  color: #333333;
}
/*遮罩*/
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  background: rgba(0, 0, 0, 0.5);
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
.commodity_screen .input-num-wrap {
  width: 500rpx;
  height: 400rpx;
  border-radius: 10rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.commodity_screen .input-num-wrap .input-num-content-head {
  width: 100%;
  height: 98rpx;
  background-color: #ffd265;
  border-radius: 10rpx 10rpx 0 0;
  font-size: 32rpx;
  color: #333;
  text-align: center;
  line-height: 98rpx;
}
.commodity_screen .input-num-wrap .input-num-content-input {
  width: 100%;
  height: 185rpx;
  background-color: #fff;
  border-radius: 0 0 10rpx 10rpx;
  padding: 50rpx 65rpx;
  box-sizing: border-box;
}
.commodity_screen .input-num-wrap .input-num-content-input input {
  width: 370rpx;
  height: 84rpx;
  background-color: #f3f3f3;
  color: #333;
  text-align: center;
}
.commodity_screen .input-num-wrap .input-num-btn {
  width: 100%;
  height: 98rpx;
  margin-top: 20rpx;
}
.commodity_screen .input-num-wrap .input-num-btn view {
  float: left;
  width: 240rpx;
  height: 98rpx;
  background-color: #fff;
  border-radius: 10rpx;
  color: #333;
  font-size: 30rpx;
  text-align: center;
  line-height: 98rpx;
}
.commodity_screen .input-num-wrap .input-num-btn view:last-child {
  float: right;
  background-color: #ffd265;
}
.num-eat-food {
  float: right;
}
