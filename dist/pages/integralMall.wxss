page {
  background-color: #e5e5e5;
}
view {
  color: #000;
  box-sizing: border-box;
}
.userIntegraMall {
  background-color: #fff;
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
}
.userIntegraMall .userIntegraLeft,
.userIntegraMall .userIntegraRight {
  flex: .5;
  display: flex;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid #afafaf;
}
.userIntegraMall .userIntegraLeft image,
.userIntegraMall .userIntegraRight image {
  width: 55rpx;
  height: 55rpx;
  margin-right: 15rpx;
}
.userIntegraMall .userIntegraRight {
  border-left: 1rpx solid #afafaf;
  border-right: 0;
}
.integralTab {
  margin-top: 30rpx;
  height: 78rpx;
  padding-top: 0;
}
.integralTab .loopBox {
  display: flex;
  justify-content: space-around;
}
.integralTab .item.active:after {
  background-color: #cb5343;
}
.integralMallGoodsBox {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 15rpx 0;
}
.integralMallGoodsBox .integralProductItem {
  display: flex;
  flex-direction: column;
  width: 49%;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
}
.integralMallGoodsBox .integralProductItem image {
  width: 100%;
  height: 300rpx;
}
.integralMallGoodsBox .integralProductItem .productPriceBox {
  width: 100%;
  padding: 20rpx;
}
.integralMallGoodsBox .integralProductItem .productPriceBox .productTitle {
  width: 100%;
  font-size: 26rpx;
  color: #333;
  padding-bottom: 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.integralMallGoodsBox .integralProductItem .productPriceBox .productPrice {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.integralMallGoodsBox .integralProductItem .productPriceBox .productPrice .originalPrice {
  color: #999;
  font-size: 20rpx;
}
.integralMallGoodsBox .integralProductItem .productPriceBox .productPrice .currentPrice {
  display: flex;
  align-items: center;
}
.integralMallGoodsBox .integralProductItem .productPriceBox .productPrice .currentPrice view:first-of-type {
  border: 1rpx solid #f40;
  border-radius: 10rpx;
  padding: 0 8rpx;
}
.integralMallGoodsBox .integralProductItem .productPriceBox .productPrice .currentPrice view:last-of-type {
  padding-left: 5rpx;
}
.integralMallGoodsBox .integralProductItem .productPriceBox .productPrice .currentPrice view {
  color: #f40;
  font-size: 22rpx;
}
.adsorbentTabs {
  position: fixed;
  top: 0;
  left: 0;
  margin-top: 0rpx;
  padding-bottom: 10rpx;
  z-index: 99;
  border-top: 1rpx solid #f1f1f1;
}
