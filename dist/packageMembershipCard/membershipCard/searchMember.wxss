page {
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.wrap {
  width: 710rpx;
  height: 70rpx;
  margin: 0 auto 30rpx;
  position: relative;
}
.wrap .search-wrap {
  display: inline-block;
  width: 587rpx;
  height: 70rpx;
  background-color: #f0f0f0;
  border-radius: 35rpx;
  margin: 0rpx 0 20rpx;
  color: #969696;
  font-size: 26rpx;
  line-height: 70rpx;
  padding-left: 60rpx;
  box-sizing: border-box;
}
.wrap .image {
  display: block;
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  left: 20rpx;
}
.wrap .cancle {
  float: right;
  display: inline-block;
  height: 100%;
  line-height: 70rpx;
  color: #fd2323;
  font-size: 30rpx;
}
.userMesseContant {
  width: 710rpx;
  margin: 20rpx auto 0;
  transform: translateY(35rpx);
  background-image: url('http://www.qumatou.com.cn/zheng/xcximage/cardbg.png');
  height: 250rpx;
  background-repeat: no-repeat;
  background-size: 100%;
  border-radius: 20rpx;
  display: flex;
}
.userMesseContant .userMesseContant_left,
.userMesseContant .userMesseContant_right {
  position: absolute;
  left: 0;
  height: 250rpx;
  box-sizing: border-box;
  padding: 20rpx;
}
.userMesseContant .userMesseContant_left {
  display: flex;
}
.userMesseContant .userMesseContant_left view {
  color: #fff;
  font-size: 32rpx;
  padding-left: 20rpx;
  height: 32rpx;
  line-height: 32rpx;
  margin-top: 50rpx;
}
.userMesseContant .userMesseContant_left image {
  margin-left: 30rpx;
  margin-top: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 1px solid #fff;
}
.userMesseContant .userMesseContant_right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  position: absolute;
  right: 0;
}
.userMesseContant .userMesseContant_right .userMesseContant_rightShare {
  color: #fff;
  width: 125rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin: 0;
  background-color: rgba(0, 0, 0, 0);
}
.userMesseContant .userMesseContant_right .userMesseContant_rightShare view {
  font-size: 25rpx;
  margin-right: 10rpx;
  color: #fff;
}
.userMesseContant .userMesseContant_right .userMesseContant_rightShare image {
  width: 35rpx;
  height: 37rpx;
}
.userMesseContant .userMesseContant_right .userMesseContant_rightMoney {
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #fff;
}
.userMesseContant .userMesseContant_right .userMesseContant_rightMoney text {
  display: inline-block;
  margin-left: 17rpx;
  font-size: 48rpx;
}
.userMesseContant .userMesseContant_right .userMesseContant_rightRecharge {
  margin-top: 58rpx;
  color: #ffd270;
  font-size: 30rpx;
}
