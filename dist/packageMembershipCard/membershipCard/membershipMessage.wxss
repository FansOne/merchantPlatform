view {
  box-sizing: border-box;
}
.membershipMessageTitle {
  width: 100%;
  color: #000;
  font-size: 32rpx;
  padding: 30rpx;
}
.inputBox {
  width: 100%;
  padding: 0 30rpx;
}
.inputBox input {
  border-radius: 8rpx;
}
.telNumberBox {
  width: 100%;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}
.telNumberBox button {
  font-size: 28rpx;
  padding: 0;
  margin: 0;
  border-radius: 0;
  height: 80rpx;
  line-height: 80rpx;
  width: 307rpx;
  background-color: #e41828;
  color: #fff;
  border-radius: 0 8rpx 8rpx 0;
}
.telNumberBox input {
  flex: 1;
  border-radius: 8rpx 0 0 8rpx;
}
input {
  background-color: #f3f3f3;
  height: 80rpx;
  padding: 0 30rpx;
}
.confirmBtn {
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 70rpx;
}
.confirmBtn button {
  background-color: #e41828;
  color: #fff;
  height: 80rpx;
  font-size: 30rpx;
  width: 250rpx;
  letter-spacing: 15rpx;
}
