page {
  background-color: #f4f5f7;
}
view {
  box-sizing: border-box;
}
.cardBalance {
  width: 100%;
  background-color: #fff;
  padding: 50rpx 40rpx;
}
.cardBalance text {
  color: #cd525b;
}
.bannerBox {
  width: 100%;
  padding: 30rpx;
}
.bannerBox image {
  width: 100%;
  height: 180rpx;
}
.rechargeTitle {
  padding: 0 30rpx;
}
.selectBox {
  box-sizing: border-box;
  padding: 20rpx 30rpx 0 30rpx;
  display: flex;
  flex-wrap: wrap;
}
.selectBox .selectBox_item {
  width: 50%;
  display: flex;
  justify-content: center;
}
.selectBox .selectBox_item .selectBox_item_ {
  background-color: #fafafa;
  display: flex;
  justify-content: center;
  width: 300rpx;
  height: 120rpx;
  line-height: 120rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
  position: relative;
}
.selectBox .selectBox_item .selectBox_item_ view:nth-child(1) {
  font-size: 33rpx;
  margin-right: 15rpx;
}
.selectBox .selectBox_item .selectBox_item_ view:nth-child(2) {
  font-size: 26rpx;
}
.selectBox .selectBox_item .selectBox_item_ .sanjiao {
  position: absolute;
  right: 0;
  top: 0;
  border-style: solid;
  border-width: 0 0 40rpx 40rpx;
  width: 0px;
  height: 0px;
  transform: rotate(-90deg);
}
.inputBox {
  transform: translateY(-110%);
  transition: transform .4s;
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 11;
  padding: 0 50rpx;
}
.inputBox .popupItem {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 10rpx;
}
.inputBox .popupItem .popup_top {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0eeee;
  padding: 25rpx 0;
}
.inputBox .popupItem .popup_top view:nth-child(1) {
  font-size: 39rpx;
  width: 70rpx;
  height: 100%;
  text-align: center;
  color: #707070;
}
.inputBox .popupItem .popup_top view:nth-child(2) {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  color: #000;
  padding-right: 20rpx;
}
.inputBox .popupItem .inputItemBox .userInput_ {
  display: flex;
  align-items: center;
  padding: 40rpx 75rpx 30rpx 75rpx;
}
.inputBox .popupItem .inputItemBox .userInput_ view {
  font-size: 34rpx;
  color: #000;
}
.inputBox .popupItem .inputItemBox .userInput_ input {
  margin-left: 15rpx;
  box-sizing: border-box;
  height: 77rpx;
  width: 100%;
  line-height: 77rpx;
  background-color: #f6f6f6;
  padding: 0 30rpx;
  color: #000;
}
.inputBox .popupItem .inputItemBox .priceRules {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 15rpx;
}
.inputBox .popupItem .inputItemBox .priceRules view:nth-child(1) {
  font-size: 35rpx;
  color: #000;
}
.inputBox .popupItem .inputItemBox .priceRules view:nth-child(2) {
  font-size: 26rpx;
  margin-top: 10rpx;
  color: #13a433;
  margin-bottom: 50rpx;
}
.inputBox .popupItem .rechargeBtn {
  width: 100%;
  background-color: #cd525b;
  color: #fff;
  border-radius: 0;
}
.inputBoxShow {
  transform: translateY(100rpx);
}
.bottomPriceBox {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  padding-left: 40rpx;
  background-color: #fff;
}
.bottomPriceBox view {
  flex: 1;
}
.bottomPriceBox view text {
  color: #cd525b;
}
.bottomPriceBox button {
  margin: 0;
  padding: 0;
  background-color: #cd525b;
  border-radius: 0;
  font-size: 30rpx;
  line-height: 100rpx;
  color: #fff;
  width: 195rpx;
}
