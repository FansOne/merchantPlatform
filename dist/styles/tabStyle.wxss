.tab-h {
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #ffffff;
  font-size: 16px;
  white-space: nowrap;
  z-index: 99;
  padding-bottom: 15rpx;
}
.tab-item {
  color: #333333;
  font-size: 30rpx;
  margin: 0 60rpx;
  display: inline-block;
}
.tab-item.active {
  font-size: 40rpx;
  color: #333333;
  font-weight: bold;
  position: relative;
}
.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 50%;
  background: #f3825d;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 16rpx;
}
.tab-content {
  height: 100%;
}
.scoll-h {
  height: 100%;
}
.scoll-h .scoll-flex {
  box-sizing: border-box;
  display: flex;
  flex-flow: wrap;
  justify-content: space-between;
  padding: 30rpx 10rpx 0 10rpx;
}
.scoll-h .scoll-flex navigator {
  width: 49%;
  background-color: #ffffff;
  border-radius: 15rpx;
  margin-bottom: 25rpx;
}
.scoll-h .scoll-flex navigator .item-ans {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.scoll-h .scoll-flex navigator .avatar {
  width: 100%;
  height: 340rpx;
  position: relative;
}
.scoll-h .scoll-flex navigator .avatar .img {
  width: 100%;
  height: 100%;
}
.scoll-h .scoll-flex navigator .avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}
.scoll-h .scoll-flex navigator .expertInfo {
  box-sizing: border-box;
  width: 100%;
  padding: 10rpx 0;
}
.scoll-h .scoll-flex navigator .expertInfo .name {
  width: 100%;
  color: #333333;
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.scoll-h .scoll-flex navigator .expertInfo .tag {
  width: 100%;
  padding: 10rpx 0;
  font-size: 22rpx;
  color: #b1b1b1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.scoll-h .scoll-flex navigator .expertInfo .price {
  width: 100%;
  display: flex;
  align-items: center;
}
.scoll-h .scoll-flex navigator .expertInfo .price .quan {
  color: #fd2323;
  font-size: 22rpx;
  border: 2px solid #fd2323;
  height: 36rpx;
  width: 60rpx;
  text-align: center;
  line-height: 36rpx;
}
.scoll-h .scoll-flex navigator .expertInfo .price .moneys {
  padding-left: 20rpx;
  color: #fd2323;
  font-size: 32rpx;
}
.guessLike {
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx 120rpx 30rpx;
}
.guessLike .guessLike-title {
  display: inline-block;
  padding-bottom: 35rpx;
  text-align: center;
  color: #969696;
}
.guessLike-bottomTitle {
  padding-bottom: 0rpx !important;
  padding-top: 20rpx !important;
  height: 100%;
  font-size: 24rpx;
}
