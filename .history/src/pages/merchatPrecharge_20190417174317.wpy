                <view>日期</view>
                <view>操作</view>
                <view>状态</view>
            </view>
            <view class="detailedItem" wx:for='{{detailedData}}' wx:key=''>
                <view>{{item.name}}</view>
                <view>{{item.price}}</view>
                <view>{{item.time}}</view>
                <view>{{item.cz}}</view>
                <view>{{item.status}}</view>
            </view>
        </view>
    </view>
</template>

