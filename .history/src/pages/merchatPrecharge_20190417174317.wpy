<script>
import wepy from 'wepy';
import requestUrl from '../api/requestUrl'
import { requestData } from '../api/requestData'

export default class merchatPrecharge extends wepy.page {
    config = {
        navigationBarTitleText: '商户预充值',
    };
    components = {};

    data = {
        allData:{},
        amount:[
            {
                contant:100,
                id:0,
                select:true
            },
            {
                contant:200,
                id:1
            },
            {
                contant:300,
                id:2
            },
            {
                contant:400,
                id:3
            },
            {
                contant:500,
                id:4
            },
            {
                contant:600,
                id:5
            },
        ],
        m_id:'',
        priceValue:null,
        detailedData:[
            {
                name:'张三',
                price:200,
                time:'2019.04.16',
                cz:'充值',
                status:'已到账'
            },
            {
                name:'李四',
                price:50,
                time:'2019.04.16',
                cz:'扣除',
                status:'已扣除'
            }
        ],
    };
    methods = {
        //选择金额
        choosePrice(item){
            if(this.priceValue == null){ //清空input
                this.priceValue = ''
            }else{
                this.priceValue = null
            }
            this.amount.forEach(element => {
                if(item.id == element.id){
                    element.select = true
                }else{
                    element.select = false
                }
            });
            this.priceValue = item.contant
        },
        // 输入框聚焦
        bindfocus(){
            this.amount.forEach(element => {
                element.select = false
            });
        },
        // 监听输入
        bindinput(e){
            this.priceValue = e.detail.value
        },
        // 充值
        payMent(){
            
        }
    };

    events = {};
    onLoad(options) {
        this.m_id = options.m_id
        // 获取商户预充值信息
        this.merchantInfo()
    };
    // 获取商户预充值信息
    merchantInfo(){
        let url = requestUrl.merchantPreloadInfo;
        let data = {
            token : wx.getStorageSync('token'),
            p_id : wepy.$instance.globalData.p_id
        };
        requestData(url,'POST',data).then(res=>{
            this.allData = res.data.data
            this.$apply()
        })
    }
}
</script>

<template lang="wxml">
    <view class="userBalanceBox">
        <view>当前余额</view>
        <view class="priceBox">
            <view class="priceItem">
                <view>￥</view>
                <view>{{allData.balance}}</view>
            </view>
            <image src="http://www.qumatou.com.cn/zheng/xcximage/walletIcon.png" />
        </view>
    </view>
    <view class="choosePrechagrgeBox">
        <view class="prechagrgeTitle">充值金额</view>
        <view class="prechagrgeItemBox">
            <view wx:for='{{amount}}' wx:key='' class="prechagrgeItem {{item.select?'selectPrice':''}}" @tap='choosePrice({{item}})'>{{item.contant}}元</view>
        </view>
        <view class="inputPrice">
            <view>自定义充值金额：￥</view>
            <view><input type="number" @focus='bindfocus' value="{{priceValue}}" placeholder="请输入充值金额" placeholder-style="font-size:26rpx" @input='bindinput'/></view>
        </view>
        <view class="prechagrgePrompt">预充值：用来支付外卖和代购代销的手续费。</view>
        <view class="prechagrgeBtn">
            <button @tap='payMent'>充值</button>
        </view>
    </view>
    <!-- 充值明细 -->
    <view class="detailedBox">
        <view class="detailedTitle">充值明细</view>
        <view class="detailedItemBox">
            <view class="detailedItemTitle">
